<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <stroke android:color="@color/List.Item.Corners"
      android:width="5sp"/>
      <solid android:color="@color/List.Item.Selected" />
      <corners android:radius="5sp" />
    </shape>
  </item>
  <item android:state_enabled="false">
    <shape>
      <stroke android:color="@color/List.Item.Corners.Darker"
      android:width="5sp"/>
      <solid android:color="@color/List.Item.Disabled" />
      <corners android:radius="5sp" />
    </shape>
  </item>
  <item>
    <shape>
      <stroke android:color="@color/List.Item.Corners"
      android:width="5sp"/>
      <solid android:color="@color/List.Item.NotSelected" />
      <corners android:radius="5sp" />
    </shape>
  </item>
</selector>